  bg[NORMAL]   = "#434D56"
  bg[PRELIGHT] = "#89b4b4"
  bg[INSENSITIVE] = "#96999C"

  base[NORMAL] = "#566470"
  base[INSENSITIVE] = "#96999C"

  text[INSENSITIVE] = "#000000"
}

