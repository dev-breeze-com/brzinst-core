# Based on Bluecurve
# Bluecurve created by Richard Stellingwerff, Emil Jacobs and Daniel Borgmann.

gtk-color-scheme = "base_color:#0a0a0a\nfg_color:#ffffff\ntooltip_fg_color:#000000\nselected_bg_color:#7894B6\nselected_fg_color:#ffffff\ntext_color:#eeeeec\nbg_color:#101010\ntooltip_bg_color:#5881A2"
gtk-auto-mnemonics = 1

style "clearlooks-default"
{
  xthickness = 1
  ythickness = 1

  GtkWidget      ::interior_focus = 1
  GtkWidget      ::focus_padding = 1

  GtkWidget::tooltip-radius    = 3
  GtkWidget::tooltip-alpha     = 230
  GtkWidget::new-tooltip-style = 1 #for compatibility

  GtkBox         ::default_border    = { 2, 2, 2, 2 }
  GtkHBox        ::default_border    = { 2, 2, 2, 2 }
  GtkVBox        ::default_border    = { 2, 2, 2, 2 }
  GtkButton      ::default_border    = { 2, 2, 2, 2 }
  GtkButton      ::default_outside_border  = { 3, 3, 3, 3 }
  GtkButton      ::child_displacement_x = 0
  GtkButton      ::child_displacement_y = 1

  GtkButtonBox   ::default_border    = { 2, 2, 2, 2 }
  GtkTable       ::default_border    = { 2, 2, 2, 2 }
  GtkPaned       ::handle_size       = 6

  GtkRange       ::trough_border     = 0
  GtkRange       ::slider_width      = 15
  GtkRange       ::stepper_size      = 15

  GtkScrollbar   ::min_slider_length = 30
  GtkCheckButton ::indicator_size    = 12
  GtkMenuBar     ::internal-padding  = 0
  GtkTreeView    ::expander_size     = 14
  GtkExpander    ::expander_size     = 16

  WnckTasklist::fade-overlay-rect = 0
  GtkEntry::honors-transparent-bg-hint = 1
  GtkEntry::progress-border = { 2, 2, 2, 2 }

  bg[NORMAL]        = @base_color
  bg[PRELIGHT]      = "#CCFFFF"
  bg[ACTIVE]        = "#6E7B95" # "#A7B8F1" # light blueish
  bg[SELECTED]      = @selected_bg_color
  bg[INSENSITIVE]   = @bg_color

  base[NORMAL]      = @base_color
  base[PRELIGHT]    = "#e0e0e0" # light beige / grey
  base[ACTIVE]      = "#6698FF" # blueish
  base[SELECTED]    = "#736AFF" # blueish
  base[INSENSITIVE] = "#404040"

  fg[NORMAL]        = @fg_color
  fg[PRELIGHT]      = @fg_color
  fg[SELECTED]      = @selected_fg_color
  fg[INSENSITIVE]   = darker (@bg_color)
  fg[ACTIVE]        = @fg_color

  text[NORMAL]      = @text_color
  text[PRELIGHT]    = @text_color
  text[SELECTED]    = @selected_fg_color
  text[INSENSITIVE] = @fg_color
  text[ACTIVE]      = @selected_fg_color

  engine "clearlooks"  {
     colorize_scrollbar = TRUE
	 reliefstyle = 1
	 menubarstyle = 2 # 0 = flat, 1 = sunken, 2 = flat gradient
	 toolbarstyle = 0
	 radius = 3.0
	 style = GUMMY
#    menuitemstyle = 1 # 0 = flat, 1 = 3d-ish (gradient), 2 = 3d-ish (button)
#    listviewitemstyle = 1 # 0 = flat, 1 = 3d-ish (gradient)
#    progressbarstyle  = 0 # 0 = candy bar, 1 = flat
  }
}

